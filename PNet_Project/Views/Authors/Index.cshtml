@model IEnumerable<PNet_Project.Models.ViewModels.AuthorViewModel>

@{
    ViewData["Title"] = "Authors";
}

<h1>Authors</h1>

<table class="table table-hover">
    <thead class="thead-light">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateOfBirth)
            </th>
            <th>
                <a class="btn btn-success text-white" asp-action="Create">
                    + New Author
                </a>
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateOfBirth)
            </td>
            <td>
                <a class="btn btn-link" asp-action="Edit" asp-route-id="@item.AuthorId">Edit</a>
                <a class="text-danger ml-1" asp-action="Delete" asp-route-id="@item.AuthorId" onclick="return confirm('Are you sure you want to delete @item.Name?')">Remove</a>
            </td>
        </tr>
}
    </tbody>
</table>
