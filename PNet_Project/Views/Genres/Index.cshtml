@model IEnumerable<PNet_Project.Models.Entities.Genre>

@{
    ViewData["Title"] = "Genres";
}

<h1>Genres</h1>

<table class="table table-hover">
    <thead class="thead-light">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.GenreName)
            </th>
            <th>
                <a class="btn btn-success text-white" asp-action="Create">
                    + New Genre
                </a>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.GenreName)
                </td>
                <td>
                    <a class="btn btn-link" asp-action="Edit" asp-route-id="@item.GenreId">Edit</a>
                    <a class="text-danger ml-1" asp-action="Delete" asp-route-id="@item.GenreId" onclick="return confirm('Are you sure you want to delete @item.GenreName?')">Remove</a>
                </td>
            </tr>
        }
    </tbody>
</table>
